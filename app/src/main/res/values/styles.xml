<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialTIL">
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_default</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_default</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_default</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_default</item>
        <item name="boxBackgroundColor">#EFF0F6</item>
        <item name="placeholderTextAppearance">@style/MaterialTIL.PlaceholderTextAppearance</item>
        <item name="placeholderTextColor">@color/label_text</item>
        <item name="hintTextAppearance">@style/MaterialTIL.PlaceholderTextAppearance</item>
        <item name="hintTextColor">@color/label_text</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeErrorColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="MaterialTIL.PlaceholderTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/hubot_sans_regular_semi</item>
        <item name="android:fontFamily">@font/hubot_sans_regular_semi</item>
    </style>

    <style name="MaterialET">
        <item name="android:textColor">@color/active_text</item>
        <item name="android:textAppearance">@style/MaterialET.TextAppearance</item>
    </style>

    <style name="MaterialET.TextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/hubot_sans_medium_semi</item>
        <item name="android:fontFamily">@font/hubot_sans_medium_semi</item>
    </style>

    <style name="MaterialBtnFilled" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/hubot_sans_medium_semi</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_default</item>
    </style>

    <style name="MaterialBtnOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/hubot_sans_medium_semi</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_default</item>
    </style>
</resources>